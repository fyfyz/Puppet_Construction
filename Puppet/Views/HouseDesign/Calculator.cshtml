@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="container mt-5 pt-5">
    <div class="d-flex justify-content-center">
        <div class="col-lg-6 mb-3">
            <div class="border px-5 pb-5 bg-white rounded h-custom">

                <div class="my-4" style="font-size: 1.5rem">
                    Calculator
                </div>

                <div class="form-group">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text ">Result</span>
                        </div>
                        <input type="number" class="form-control" value="@ViewBag.Result" readonly required />
                    </div>

                    @using (Html.BeginForm("Calculator", "HouseDesign", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text w-custom">Width</span>
                            </div>
                            <input type="number" class="form-control" id="width" name="width" required />
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text w-custom">Length</span>
                            </div>
                            <input type="number" class="form-control" id="length" name="length" required />
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Number of floor</span>
                            </div>
                            <input type="number" class="form-control" id="floor" name="floor" required />
                        </div>
                        <input type="submit" value="Calculate" class="btn btn-outline-dark-custom mb-2 btn-block" />

                    }
                </div>

            </div>
        </div>

    </div>
</section>

